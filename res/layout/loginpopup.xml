<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:isens="http://schemas.android.com/apk/res/isens.hba1c_analyzer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >
    
    <Button
        android:id="@+id/snapshotBtn2"
        android:layout_width="180px"
        android:layout_height="60px"
        android:layout_marginLeft="120px"
        android:background="#00000000" />
    
    <isens.hba1c_analyzer.Model.CustomTextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="164px"
        android:layout_marginTop="124px"
        android:typeface="sans"
        android:textSize="32px"
        android:textColor="#525252"
        android:shadowColor="#696969"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2" />
    
    <EditText
        android:id="@+id/loginoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="186px"
        android:layout_marginTop="200px"
        android:paddingLeft="20px"
        android:textSize="24sp"
        android:textColor="#565656"
        android:hint="@string/operator"
        android:textColorHint="#E8E8E8"
        android:maxLength="8"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:background="@drawable/login_pass" />
    
    <EditText
        android:id="@+id/loginpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="186px"
        android:layout_marginTop="253px"
        android:paddingLeft="20px"
        android:textSize="24sp"
        android:textColor="#565656"
        android:hint="@string/password"
        android:textColorHint="#E8E8E8"
        android:maxLength="4"
        android:singleLine="true"
        android:inputType="numberPassword"
        android:imeOptions="actionDone"
        android:background="@drawable/login_pass" />
    
    <Button 
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="538px"
        android:layout_marginTop="184px"
        android:text="@string/login"
        android:typeface="sans"
        android:textSize="20px"
        android:textColor="#FFFFFF"
        android:shadowColor="#696969"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="12px"
        android:background="@drawable/login_selector" />
    
    <Button
        android:id="@+id/guestbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="535px"
        android:layout_marginTop="295px"
        android:text="@string/cancel"
        android:typeface="sans"
        android:textSize="18px"
        android:textColor="#525252"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:paddingLeft="2px"
        android:paddingTop="14px"
        android:gravity="center_horizontal"
        android:background="@drawable/guest_selector" />

    <Button 
        android:id="@+id/checkbtn"
        android:layout_width="28px"
        android:layout_height="23px"
        android:layout_marginLeft="190px"
        android:layout_marginTop="306px"
        android:background="@drawable/login_checkbox" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="23px"
        android:layout_marginLeft="220px"
        android:layout_marginTop="306px"
        android:text="@string/rememberme"
        android:typeface="sans"
        android:textSize="14px"
        android:textColor="#565656"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:gravity="center_vertical" />
    
</RelativeLayout>