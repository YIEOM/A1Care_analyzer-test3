<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/systemchecklayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg" >
       	
    <Button
        android:id="@+id/snapshotBtn"
        android:layout_width="180px"
        android:layout_height="60px"
        android:layout_marginLeft="120px"
        android:background="#00000000" />
    
    <TextView
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400px"
        android:layout_marginTop="276px"
        android:text="@string/systemchecking"
        android:typeface="sans"
        android:textSize="22px"
        android:textColor="#5B5B5B"
        android:gravity="right" />
    
    <ImageView
        android:id="@+id/systemcheckani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="257px"
        android:background="@drawable/systemcheck" />

</RelativeLayout>