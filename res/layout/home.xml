<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_top_bg" />
            
    <ImageView
        android:id="@+id/device" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="520px"
        android:layout_marginTop="12px" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   		
   	<Button
        android:id="@+id/snapshotBtn"
        android:layout_width="180px"
        android:layout_height="60px"
        android:layout_marginLeft="120px"
        android:background="#00000000" />
   	
   	<Button
        android:id="@+id/escicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="728px"
        android:layout_marginTop="6px"
        android:background="@drawable/shutdown_selector" />
   	
    <Button
        android:id="@+id/runbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="428px"
        android:layout_marginTop="109px"
        android:background="@drawable/run_selector" />
    
    <TextView
        android:id="@+id/runText"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginLeft="476px"
        android:layout_marginTop="238px"
        android:typeface="sans"
        android:textSize="22px"
        android:textColor="#666666"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:gravity="center" />

    <Button
        android:id="@+id/settingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="616px"
        android:layout_marginTop="288px"
        android:background="@drawable/setting_selector" />

    <TextView 
        android:id="@+id/settingText"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginLeft="651px"
        android:layout_marginTop="399px"
        android:typeface="sans"
        android:textSize="22px"
        android:textColor="#666666"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:gravity="center" />
    
    <Button
        android:id="@+id/recordbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74px"
        android:layout_marginTop="223px"
        android:background="@drawable/record_selector" />
    
    <TextView 
        android:id="@+id/recordText"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginLeft="108px"
        android:layout_marginTop="356px"
        android:typeface="sans"
        android:textSize="22px"
        android:textColor="#666666"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/idtext" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginTop="450px"
        android:typeface="sans"
        android:textSize="18px"
        android:textColor="#17469E"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2" />
              
    <TextView
   	    android:id="@+id/demovertext"
	    android:layout_width="200px"
	    android:layout_height="30px"
	    android:layout_marginLeft="590px"
	    android:layout_marginTop="440px"
	    android:gravity="bottom|right"
        android:typeface="sans"
        android:textSize="18px"
        android:textColor="#04A458"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2" />
    
</RelativeLayout>