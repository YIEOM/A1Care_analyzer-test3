<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scantemplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ani_scan_bg" >
      
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/main_top_bg" />
            
    <ImageView
        android:id="@+id/device" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="520px"
        android:layout_marginTop="12px" />
    
   	<TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
    
   	<Button
        android:id="@+id/escicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="728px"
        android:background="@drawable/esc_selector" />
       	
    <ImageView
        android:id="@+id/userAct1"
        android:layout_marginTop="64px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/useract1" />
    
    <ImageView
        android:id="@+id/userAct4"
        android:layout_marginLeft="264px"
        android:layout_marginTop="120px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</RelativeLayout>