<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateTimeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >
    
    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_selector" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/title" />
    
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="126px"
        android:layout_marginTop="14px"
        android:typeface="sans"
        android:textSize="26px"
        android:textColor="#606060"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2" />
    
    <Button
        android:id="@+id/snapshotBtn"
        android:layout_width="180px"
        android:layout_height="60px"
        android:layout_marginLeft="120px"
        android:background="#00000000" />
    
    <ImageView
        android:id="@+id/device" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="520px"
        android:layout_marginTop="12px" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   	
   	<ImageView
   	    android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71px"
        android:layout_marginTop="237px" />
   	
   	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginLeft="173px"
        android:layout_marginTop="81px" >
   	    
   	    <Button
	        android:id="@+id/val1stpBtn"
	        android:layout_width="129px"
	        android:layout_height="114px"
	        android:background="@drawable/systemsetting_btn_selector" />
   	    
		<ImageView 
		    android:layout_width="wrap_content"
