<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting4Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_selector" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/title" />
    
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="126px"
        android:layout_marginTop="14px"
        android:typeface="sans"
        android:textSize="26px"
        android:textColor="#606060"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2" />
    
    <Button
        android:id="@+id/snapshotBtn"
        android:layout_width="180px"
        android:layout_height="60px"
        android:layout_marginLeft="120px"
        android:background="#00000000" />
    
    <ImageView
        android:id="@+id/device" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="520px"
        android:layout_marginTop="12px" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   	        
   	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88px"
        android:gravity="center" >
   	
	   	<ImageView
	   	    android:id="@+id/icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
   	
   	</RelativeLayout>
   	
   	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginLeft="134px"
        android:layout_marginTop="203px" >
   	    
   	    <Button
	        android:id="@+id/leftBtn"
	        android:layout_width="129px"
	        android:layout_height="114px"
	        android:background="@drawable/systemsetting_btn_selector" />
   	    
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
	        android:src="@drawable/pdr_left_icon" />
	        
   	</RelativeLayout>
   	
   	<TextView
   	    android:id="@+id/mainText"
   	    android:layout_width="200px"
        android:layout_height="114px"
        android:layout_marginLeft="300px"
        android:layout_marginTop="203px"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="60px"
        android:textColor="#565656" />
   		
   	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
      	android:layout_marginLeft="537px"
        android:layout_marginTop="203px" >
   	    
   	    <Button
	        android:id="@+id/rightBtn"
	        android:layout_width="129px"
	        android:layout_height="114px"
	        android:background="@drawable/systemsetting_btn_selector" />
   	    
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
	        android:src="@drawable/pdr_right_icon" />
	        
   	</RelativeLayout>
   	
</RelativeLayout>