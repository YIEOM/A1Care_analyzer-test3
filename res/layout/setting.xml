<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settinglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
    <Button
        android:id="@+id/backicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_selector" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/title" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128px"
        android:layout_marginTop="20px"
        android:src="@drawable/setting_title" />
            
    <ImageView
        android:id="@+id/device" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="520px"
        android:layout_marginTop="12px" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   		
   	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginLeft="130px"
        android:layout_marginTop="137px" >
   	    
   	    <Button
	        android:id="@+id/systembtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/settingmodebtn_selector" />
   	    
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginTop="30px"
		    android:layout_centerHorizontal="true"
	        android:src="@drawable/settingmode_icon1" />
	        
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginTop="180px" 
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
		    android:text="SYSTEM\nSETTING"
	        android:typeface="sans"
	        android:textSize="20px"
	        android:textColor="#565656" />
		    
   	</RelativeLayout>

 	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginLeft="314px"
        android:layout_marginTop="137px" >
   	    
   	    <Button
	        android:id="@+id/operatorbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/settingmodebtn_selector" />
   	    
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginTop="30px"
		    android:layout_centerHorizontal="true"
	        android:src="@drawable/settingmode_icon3" />
	        
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginTop="180px" 
	        android:layout_centerHorizontal="true"
		    android:gravity="center"
		    android:text="OPERATOR\nSETTING"
	        android:typeface="sans"
	        android:textSize="20px"
	        android:textColor="#565656" />
		    
   	</RelativeLayout>
   		
 	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginLeft="498px"
        android:layout_marginTop="137px" >
   	    
   	    <Button
	        android:id="@+id/functionalbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/settingmodebtn_selector" />
   	    
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginTop="30px"
		    android:layout_centerHorizontal="true"
	        android:src="@drawable/settingmode_icon4" />
	        
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginTop="180px" 
	        android:layout_centerHorizontal="true"
		    android:gravity="center"
		    android:text="FUNCTIONAL\nTEST"
	        android:typeface="sans"
	        android:textSize="20px"
	        android:textColor="#565656" />
		    
   	</RelativeLayout>
 	
 	<Button
		android:id="@+id/cheat1btn"
		android:layout_width="50px"
		android:layout_height="50px"
		android:layout_marginLeft="0px"
        android:layout_marginTop="430px"
		android:background="#00000000" />
   	
 	<Button
		android:id="@+id/cheat2btn"
		android:layout_width="50px"
		android:layout_height="50px"
		android:layout_marginLeft="750px"
        android:layout_marginTop="430px"
		android:background="#00000000" />

</RelativeLayout>