<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/temperaturelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
     <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_selector" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/title" />
    
	<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128px"
        android:layout_marginTop="20px"
        android:src="@drawable/temperature_title" />
    
    <ImageView
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="520px"
        android:layout_marginTop="12px" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   	
   	
   	<TextView
        android:layout_width="270px"
        android:layout_height="60px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:typeface="sans"
        android:text="Reaction Chamber"
        android:textSize="28px"
        android:textColor="#04A458" />
   	
   	<Button
        android:id="@+id/setbtn"
        android:layout_width="100px"
        android:layout_height="50px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="200px"
        android:gravity="center"
	    android:text="SET"
	    android:textStyle="bold"
        android:typeface="sans"
        android:textSize="28px"
        android:textColor="#565656"
        android:background="@drawable/btn_selector5" />
   	
	<EditText
        android:id="@+id/tmpetext"
        android:layout_width="150px"
        android:layout_height="60px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="195px"
        android:gravity="center"
        android:paddingLeft="10px"
        android:ems="10"
        android:textSize="40px"
        android:textColor="#565656"
        android:singleLine="true" 
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:longClickable="false"
        android:background="@drawable/factor_box" />
	
	<TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="300px"
        android:gravity="center"
	    android:text="READ"
	    android:textStyle="bold"
        android:typeface="sans"
        android:textSize="28px"
        android:textColor="#565656" />
	
	<TextView
        android:id="@+id/chamTmpText"
        android:layout_width="150px"
        android:layout_height="60px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="295px"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="40px"
        android:textColor="#00AA00"
        android:background="@drawable/factor_box" />
	
	<TextView
        android:layout_width="270px"
        android:layout_height="60px"
        android:layout_marginLeft="450px"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:typeface="sans"
        android:text="Inner"
        android:textSize="28px"
        android:textColor="#023894" />
	
	<TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:layout_marginLeft="450px"
        android:layout_marginTop="300px"
        android:gravity="center"
	    android:text="READ"
	    android:textStyle="bold"
        android:typeface="sans"
        android:textSize="28px"
        android:textColor="#565656" />
	
	<TextView
        android:id="@+id/ambTmpText"
        android:layout_width="150px"
        android:layout_height="60px"
        android:layout_marginLeft="570px"
        android:layout_marginTop="295px"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="40px"
        android:textColor="#0000AA"
        android:background="@drawable/factor_box" />
	
</RelativeLayout>